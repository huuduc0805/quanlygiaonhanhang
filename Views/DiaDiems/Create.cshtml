@model quanlygiaonhanhang.Models.DiaDiem

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm khu vực vận chuyển</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Thông tin khu vực vận chuyển</h4>
    <hr />
    <span style="color:red">@ViewBag.TB</span>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="control-label col-md-2">Tên khu vực</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenDD, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenDD, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Phạm vi khu vực</div>
        <div class="col-md-10">
            <select name="KhuVuc" class="form-control">
                <option value="1">Nội thành</option>
                <option value="2">Ngoại thành</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Giá cước dịch vụ</div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.GiaCuoc, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
            @Html.ValidationMessageFor(model => model.GiaCuoc, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row" style="margin-left:20px">
        <input type="submit" value="Thêm mới" class="btn btn-success" />
        <div class="col-md-1">
            <a class="btn btn-primary" href="@Url.Action("Index","DiaDiems")">Trở lại</a>
        </div>
    </div>
</div>
}
