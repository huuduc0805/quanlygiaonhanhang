@model quanlygiaonhanhang.Models.PhanCongVC

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Phân công giao hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Thông tin phân công</h4>
        <hr />
        <span style="color:red">@ViewBag.TB</span>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input hidden name="IdDH" value="@ViewBag.IdDH" />
        <div class="form-group">
            <div class="control-label col-md-2">Họ tên tài xế</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.HoTenTX, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.HoTenTX, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">Biển số xe</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BKS, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BKS, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2">Số điện thoại</div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row" style="margin-left:20px">
            <input type="submit" value="Hoàn tất" class="btn btn-success" />
            <div class="col-md-1">
                <a class="btn btn-primary" href="@Url.Action("Index","DonHangs")">Trở lại</a>
            </div>
        </div>
    </div>
}